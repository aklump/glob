{
  "name": "aklump/glob",
  "description": "File and directory path globbing.",
  "homepage": "https://github.com/aklump/glob",
  "authors": [
    {
      "name": "Aaron Klump",
      "homepage": "http://www.intheloftstudios.com",
      "role": "Lead Developer"
    }
  ],
  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/aklump/gitignore"
    }
  ],
  "autoload": {
    "psr-4": {
      "AKlump\\Glob\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AKlump\\Glob\\Tests\\Unit\\": "./tests_unit"
    }
  },
  "require": {
    "php": ">=7.3",
    "aklump/gitignore": "^0.0.1",
    "symfony/filesystem": "^5.4",
    "crysalead/dir": "^2.0",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "aklump/phpswap": "^0.0.7"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
